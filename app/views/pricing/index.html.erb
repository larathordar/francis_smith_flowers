


<section class="section">
  <div class="has-text-centered box">
    <h1 class="title">Pricing</h1>
    <h2 class="subtitle">Choose the best plan that matches your reading consistency and budget.</h2>
    <div class="pricing-table">
      <div class="monthly">
        <div class="pricing-plan is-warning">
          <div class="plan-header">Perfectly Formed  once a Month</div>
          <div class="plan-price"><span class="plan-price-amount"><span class="plan-price-currency">£30/month</div>
          <div class="plan-items">
          </div>
          <div class="plan-footer">
              <%= link_to 'Subscribe', new_subscription_path( plan_id: Rails.application.credentials.small_monthly), class:"button is-fullwidth" %>
          </div>
        </div>
        <div class="pricing-plan is-link is-active">
          <div class="plan-header">Medium sized bouquet once a Month</div>
          <div class="plan-price"><span class="plan-price-currency">£50/month</div>
          <div class="plan-items">
            <div class="plan-item">10 Downloads</div>
          </div>
          <div class="plan-footer">
              <%= link_to 'Subscribe', new_subscription_path(plan: "plan_DaRWmuIl2M8NoJ", plan_id: Rails.application.credentials.medium_monthly), class:"button is-fullwidth" %>
          </div>
        </div>
        <div class="pricing-plan is-danger">
          <div class="plan-header">Large sized bouquet once a Month</div>
          <div class="plan-price">£80/month</div>
          <div class="plan-footer">
              <%= link_to 'Subscribe', new_subscription_path(plan: "large_monthly", plan_id: Rails.application.credentials.large_monthly), class:"button is-fullwidth" %>
          </div>
          </div>
          <div class="pricing-plan is-danger">
            <div class="plan-header">Sublime sized bouquet once a Month</div>
            <div class="plan-price"><span class="plan-price-currency">£110/month</div>
            <div class="plan-footer">
                <%= link_to 'Subscribe', new_subscription_path(plan: "sublime_monthly", plan_id: Rails.application.credentials.sublime_monthly), class:"button is-fullwidth" %>
            </div>
            </div>
        </div>
        <div class="weekly">
            <div class="pricing-plan is-danger">
              <div class="plan-header">Perfectly Formed  weekly</div>
              <div class="plan-price"><span class="plan-price-currency">£30/week</div>
              <div class="plan-footer">
                  <%= link_to 'Subscribe', new_subscription_path(plan: "small_weekly", plan_id: Rails.application.credentials.small_weekly), class:"button is-fullwidth" %>
              </div>
            </div>
              <div class="pricing-plan is-danger">
                <div class="plan-header">Medium sized bouquet weekly</div>
                <div class="plan-price"><span class="plan-price-currency">£50/week</div>
                <div class="plan-footer">
                    <%= link_to 'Subscribe', new_subscription_path(plan: "medium_weekly", plan_id: Rails.application.credentials.medium_weekly), class:"button is-fullwidth" %>
                </div>
              </div>
                <div class="pricing-plan is-danger">
                  <div class="plan-header">Large sized bouquet weekly</div>
                  <div class="plan-price"><span class="plan-price-currency">£80/week</div>
                  <div class="plan-footer">
                      <%= link_to 'Subscribe', new_subscription_path(plan: "large_weekly", plan_id: Rails.application.credentials.large_weekly), class:"button is-fullwidth" %>
                  </div>
                </div>
                  <div class="pricing-plan is-danger">
                    <div class="plan-header">Sublime sized bouquet weekly</div>
                    <div class="plan-price"><span class="plan-price-currency">£110/week</div>
                    <div class="plan-footer">
                        <%= link_to 'Subscribe', new_subscription_path(plan: "sublime_weekly", plan_id: Rails.application.credentials.sublime_weekly), class:"button is-fullwidth" %>
                    </div>
                  </div>
        </div>
        <div class="Fortnightly">
          <div class="pricing-plan is-danger">
            <div class="plan-header">Perfectly Formed  fortnightly</div>
            <div class="plan-price"><span class="plan-price-currency">£30/fortnightly</div>
            <div class="plan-footer">
                <%= link_to 'Subscribe', new_subscription_path(plan: "small_fortnightly", plan_id: Rails.application.credentials.small_fortnightly), class:"button is-fullwidth" %>
            </div>
          </div>
            <div class="pricing-plan is-danger">
              <div class="plan-header">Medium sized bouquet fortnightly</div>
              <div class="plan-price"><span class="plan-price-currency">£50/fortnightly</div>
              <div class="plan-footer">
                  <%= link_to 'Subscribe', new_subscription_path(plan: "medium_fortnightly", plan_id: Rails.application.credentials.medium_fortnightly), class:"button is-fullwidth" %>
              </div>
            </div>
              <div class="pricing-plan is-danger">
                <div class="plan-header">Large sized bouquet fortnightly</div>
                <div class="plan-price"><span class="plan-price-currency">£80/fortnightlyk</div>
                <div class="plan-footer">
                    <%= link_to 'Subscribe', new_subscription_path(plan: "large_fortnightly", plan_id: Rails.application.credentials.large_fortnightly), class:"button is-fullwidth" %>
                </div>
              </div>
                <div class="pricing-plan is-danger">
                  <div class="plan-header">Sublime sized bouquet fortnightly</div>
                  <div class="plan-price"><span class="plan-price-currency">£110/fortnightly</div>
                  <div class="plan-footer">
                      <%= link_to 'Subscribe', new_subscription_path(plan: "sublime_fortnightly", plan_id: Rails.application.credentials.sublime_fortnightly), class:"button is-fullwidth" %>
                  </div>
                </div>
        </div>

      </div>
    </div>
  </div>
</section>
